{
  "type": "module",
  "name": "@digital-alchemy/hass",
  "repository": "https://github.com/Digital-Alchemy-TS/hass",
  "homepage": "https://docs.digital-alchemy.app",
  "version": "24.9.3",
  "description": "Typescript APIs for Home Assistant. Includes rest & websocket bindings",
  "scripts": {
    "build": "rm -rf dist/; tsc",
    "lint": "eslint src",
    "test": "./scripts/test.sh",
    "prepublishOnly": "yarn build",
    "upgrade": "ncu -f '@digital-alchemy/*' -u; yarn"
  },
  "bugs": {
    "email": "bugs@digital-alchemy.app",
    "url": "https://github.com/Digital-Alchemy-TS/hass/issues/new/choose"
  },
  "keywords": [
    "nodejs",
    "home-automation",
    "automation",
    "typescript",
    "websocket",
    "home-assistant",
    "digital-alchemy"
  ],
  "bin": {
    "mock-assistant": "./dist/mock_assistant/main.js"
  },
  "funding": [
    {
      "url": "https://github.com/sponsors/zoe-codez",
      "type": "GitHub"
    },
    {
      "url": "https://ko-fi.com/zoe_codez",
      "type": "ko-fi"
    }
  ],
  "author": {
    "url": "https://github.com/zoe-codez",
    "name": "Zoe Codez"
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js",
    "./mock-assistant": "./dist/mock_assistant/index.js"
  },
  "dependencies": {
    "semver": "^7.6.3",
    "ws": "^8.18.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.14.2",
    "@digital-alchemy/core": "^24.8.4",
    "@digital-alchemy/synapse": "^24.9.3",
    "@digital-alchemy/type-writer": "^24.9.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@faker-js/faker": "^9.0.1",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.13",
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/mute-stream": "^0.0.4",
    "@types/node": "^22.5.5",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.1",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "8.5.0",
    "@typescript-eslint/parser": "8.5.0",
    "dayjs": "^1.11.13",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-no-unsanitized": "^4.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^2.0.2",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "npm-check-updates": "^17.1.1",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@digital-alchemy/core": "*",
    "dayjs": "^1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "coveragePathIgnorePatterns": [
      "testing/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/testing/?(*.)+(spec|test).ts"
    ],
    "setupFiles": [
      "<rootDir>/test-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json",
          "useESM": true
        }
      ]
    }
  },
  "packageManager": "yarn@4.4.0",
  "resolutions": {
    "@digital-alchemy/core": "portal:/home/zoe/DigitalAlchemyTS/core"
  }
}
